<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/minValue_default"
        android:summary="%s"
        android:key="minPrice"
        android:title="Price per night minimum"
        android:capitalize="words"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"/>
    <EditTextPreference
        android:defaultValue="@string/maxValue_default"
        android:summary="%s"
        android:key="maxPrice"
        android:title="Price per night maximum"
        android:capitalize="words"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:inputType="number"/>

    <MultiSelectListPreference
        android:dialogTitle="Locations"
        android:key="mode_repeat"
        android:summary=""
        android:title="Locations"
        android:entries="@array/location_options"
        android:entryValues="@array/location_options_values"
        android:defaultValue="@array/selectedLocations"
        />/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="accessibilityRequirement"
        android:title="Wheelchair compatibility" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="petRequirement"
        android:title="Pet friendly" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="airConRequirement"
        android:title="Air Conditioning" />

    <ListPreference
        android:defaultValue="0"
        android:summary="%s"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="numBedrooms"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Number of bedrooms" />

    <ListPreference
        android:defaultValue="0"
        android:summary="%s"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="numBathrooms"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Number of bathrooms" />


</PreferenceScreen>
